<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp">

    <TextView
        android:id="@+id/txt_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type your Comment"/>
<EditText
    android:id="@+id/et_post_comment"
    android:layout_below="@+id/txt_type_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:inputType="textCapSentences|textMultiLine"
    android:maxLength="2000"
    android:maxLines="4"
    android:hint="Discuss up to 140 characters"
    android:background="@drawable/edit_text_background"
    />
    <Button
        android:id="@+id/btn_post_comment_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_alignParentBottom="true"
        android:text="Submit"/>
</RelativeLayout>